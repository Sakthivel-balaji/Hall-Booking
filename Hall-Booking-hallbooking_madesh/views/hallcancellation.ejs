<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="stylesheets/style.css">

</head>

<body>
  <div class="main">
    <%- include header %>
    <%- include leftnav %>

    <div class="content">
      <h2>Hall Cancellation</h2>
      <%- include message %>
      <div class="container">
        <form action="hallcancellation" method="POST">
          <div class="middle">
            <input type="hidden" id="txtID" name="txtUserId" value="<%= userId %>" >
            <div class="row">
              <div class="col-25">
                <label for="Enter the date">Enter the date:</label>
              </div>
              <div class="col-75">
                <input type="date" id="Enter the date" name="edate" value="<%= edate %>">
              </div>
            </div>
            
            <div class="row">
              <input type="submit" value="Submit">
            </div>
          </div>
        </form>
      </div>

</body>

</html>
